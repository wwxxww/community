<div class="aw-container-wrap">
        <div class="container">
            <div class="row">
                <div class="aw-content-wrap clearfix">
                    <div class="col-sm-12 col-md-9 aw-main-content">
                        <div class="aw-mod aw-user-detail-box">
                            <div class="mod-head">
                                <img src="<%= userInfo.logo%>" style="width:50px">
                                <span class="pull-right operate">
                                    <a href="#" class="follow btn btn-normal btn-success">
                                        <span>关注</span>
                                        <em>|</em>
                                        <b><%=userInfo.followCount%></b>
                                    </a> 
                                </span>
                                <h1><%= userInfo.name%></h1>
                                <p class="text-color-999"><%=userInfo.comments%></p>
                                <p class="aw-user-flag"></p>
                            </div>
                            <div class="mod-body">
                                <div class="meta">
                                    <span>
                                        <i class="fa fa-bar-chart-o"></i>
                                        积分:
                                        <em class="aw-text-color-orange"><%=userInfo.score%></em>
                                    </span>
                                    <span>
                                        注册时间:
                                        <em class="aw-text-color-orange"><%= userInfo.createTimeFormat%></em>
                                    </span>
                                </div>
                            </div>
                            <div class="mod-footer">
                                <ul class="nav nav-tabs aw-nav-tabs hidden-xs">
                                    <li class="active">
                                        <a href="#questions" data-toggle="tab">
                                            发问
                                            <span class="badge"><%= articleInfo.length %></span>
                                        </a>
                                    </li>
                                    <li class>
                                        <a href="#replys" data-toggle="tab">
                                            回复
                                            <span class="badge"><%= replyInfo.length %></span>
                                        </a>
                                    </li>
                                    <li class>
                                        <a href="#focus" data-toggle="tab">关注</a>
                                    </li>
                                    <li class>
                                        <a href="#actions" data-toggle="tab">动态</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="aw-user-center-tab">
                            <div class="tab-content">
                                <!--提问-->
                                <div class="tab-pane active" id="questions">
                                    <div class="aw-mod">
                                        <div class="mod-head">
                                            <h3>
                                                <a class="pull-right aw-more-content" href="/user/admin/questions">
                                                    更多
                                                </a>
                                                发问
                                            </h3>
                                        </div>
                                        <div class="mod-body">
                                            <div class="aw-profile-publish-list">
                                                    <% articleInfo.forEach(function(article){%>
                                                <div class="aw-item">
                                                    <div class="mod-head">
                                                        <h4>
                                                            <a href="/articles/detail/<%=article._id%>">
                                                                <%= article.title %>
                                                            </a>
                                                        </h4>
                                                    </div>
                                                    <div class="mod-body">
                                                        <span class="aw-border-radius-5 count pull-left">
                                                            <i class="fa fa-comment-o"></i><%= article.replyCount %>
                                                        </span>
                                                        <p class="aw-hide-txt">
                                                                <%= article.browerCount %>   次浏览  • <%=userInfo.followCount%> 个关注   •<%= article.createTimeFormat%>
                                                        </p>
                                                    </div>
                                                </div>
                                                <%})%>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--提问-->
                                <!--回复-->
                                <div class="tab-pane" id="replys">
                                    <div class="aw-mod">
                                        <div class="mod-head">
                                            <h3>
                                                <a class="pull-right" href="/user//replys">更多</a>
                                                回复
                                            </h3>
                                        </div>
                                        <div class="mod-body">
                                            <div class="aw-profile-answer-list">
                                                    <% replyInfo.forEach(function(reply){%>
                                                <div class="aw-item">
                                                    <div class="mod-head">
                                                        <h4>
                                                            <a href="">
                                                                <%= reply.articleId.title %>
                                                            </a>
                                                        </h4>
                                                    </div>
                                                    <div class="mod-body">
                                                        <span class="aw-border-radius-5 count pull-left">
                                                            <i class="fa fa-thumbs-o-up"></i> 0
                                                        </span>
                                                        <div class="aw-hide-txt">
                                                                <%- markdown(reply.content) %>
                                                        </div>
                                                    </div>
                                                </div>
                                                <%})%>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--回复-->
                                <!--关注-->
                               
                                <!--关注-->
                                <!--动态-->
                                <div class="tab-pane" id="actions">
                                    <div class="aw-mod">
    
                                    </div>
                                </div>
                                <!--动态-->
                            </div>
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>
    </div>