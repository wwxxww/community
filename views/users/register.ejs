<div class="register" ng-controller="registerController">
    <div class="container">
        <div class="panel panel-default">

            <div class="panel-heading">
                <h3 class="panel-title logo">
                    <img src="/images/bootstrap-logo.png" alt="bootstrap-logo.png">
                    <span>新用户注册</span>
                </h3>
            </div>

            <div class="panel-body">
                <form name="registerForm" novalidate>
                    <div class="form-group">
                        <label for="name">账号：</label>
                        <input type="text" class="form-control" id="name" placeholder="请输入账号" ng-model="name" name="name" required pattern="^[\w]{2,10}$">
                        <span class="error" ng-show="registerForm.name.$dirty && registerForm.name.$invalid">
                            <span ng-show="registerForm.name.$error.required">必填</span>
                            <span ng-show="registerForm.name.$error.pattern">必须是2-10位的数字或字母</span>
                        </span>
                    </div>
                    <div class="form-group">
                        <label for="email">邮箱：</label>
                        <input type="email" class="form-control" id="email" placeholder="请输入邮箱" ng-model="email" name="email" required pattern="^([a-zA-Z0-9_-])+@([a-zA-Z0-9_-])+(.[a-zA-Z0-9_-])+">
                        <span class="error" ng-show="registerForm.email.$dirty && registerForm.email.$invalid">
                            <span ng-show="registerForm.email.$error.required">必填</span>
                            <span ng-show="registerForm.email.$error.pattern">邮箱格式不正确，示例：xxx@163.com</span>
                        </span>
                    </div>
                    <div class="form-group">
                        <label for="password">密码：</label>
                        <input type="password" class="form-control" id="password" placeholder="请输入密码" ng-model="password" name="password" required
                            pattern="^(?![0-9]+$)(?![a-zA-Z]+$)[0-9A-Za-z]{6,12}$">
                        <span class="error" ng-show="registerForm.password.$dirty && registerForm.password.$invalid">
                            <span ng-show="registerForm.password.$error.required">必填</span>
                            <span ng-show="registerForm.password.$error.pattern">必须是6-12的数字和字母的组合</span>
                        </span>
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">确认密码：</label>
                        <input type="password" class="form-control" id="confirmPassword" placeholder="请再次输入密码" ng-model="confirmPassword" name="confirmPassword"
                            required pattern="^(?![0-9]+$)(?![a-zA-Z]+$)[0-9A-Za-z]{6,12}$">
                        <span class="error" ng-show="registerForm.confirmPassword.$dirty && registerForm.confirmPassword.$invalid">
                            <span ng-show="registerForm.confirmPassword.$error.required">必填</span>
                            <span ng-show="registerForm.confirmPassword.$error.pattern">必须是6-12的数字和字母的组合</span>
                        </span>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" ng-model="agree"> 我同意 
                            <a href="javascript:void(0);" onclick="showAgreement()">用户协议</a>
                        </label>
                        <a href="/users/login" class="pull-right">已有账号</a>
                    </div>
                    <button type="submit" class="btn btn-primary" ng-click="register()" ng-disabled="(registerForm.name.$invalid)||(registerForm.email.$invalid)||(registerForm.password.$invalid)||(registerForm.confirmPassword.$invalid)||!agree">注册</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function showAgreement() {
        layer.open({
            type: 2,
            title: '用户协议',
            shadeClose: true,
            shade: false,
            maxmin: true, //开启最大化最小化按钮
            area: ['893px', '600px'],
            content: '/agreement.html'
        });
    }

</script>