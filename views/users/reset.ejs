<div class="reset" ng-controller="resetController">
    <div class="container">
        <div class="panel panel-default">
    
            <div class="panel-heading">
                <h3 class="panel-title logo">
                    <img src="/images/bootstrap-logo.png" alt="bootstrap-logo.png">
                    <span>重置密码</span>
                </h3>
            </div>
    
            <div class="panel-body">
                <form name="resetForm" novalidate>
                    <div class="form-group">
                        <label for="email">邮箱：</label>
                        <input type="email" class="form-control" id="email" name="email" value="<%=email%>" disabled>
                    </div>
                    <div class="form-group">
                        <label for="password">密码：</label>
                        <input type="password" class="form-control" id="password" placeholder="请输入密码" ng-model="password" name="password" required
                            pattern="^(?![0-9]+$)(?![a-zA-Z]+$)[0-9A-Za-z]{6,12}$">
                        <span class="error" ng-show="resetForm.password.$dirty && resetForm.password.$invalid">
                            <span ng-show="resetForm.password.$error.required">必填</span>
                            <span ng-show="resetForm.password.$error.pattern">必须是6-12的数字和字母的组合</span>
                        </span>
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">确认密码：</label>
                        <input type="password" class="form-control" id="confirmPassword" placeholder="请再次输入密码" ng-model="confirmPassword" name="confirmPassword"
                            required pattern="^(?![0-9]+$)(?![a-zA-Z]+$)[0-9A-Za-z]{6,12}$">
                        <span class="error" ng-show="resetForm.confirmPassword.$dirty && resetForm.confirmPassword.$invalid">
                            <span ng-show="resetForm.confirmPassword.$error.required">必填</span>
                            <span ng-show="resetForm.confirmPassword.$error.pattern">必须是6-12的数字和字母的组合</span>
                        </span>
                    </div>
                    <button type="submit" class="btn btn-primary" ng-click="reset()" ng-disabled="(resetForm.email.$invalid)||(resetForm.password.$invalid)||(resetForm.confirmPassword.$invalid)">重置密码</button>
                </form>
            </div>
        </div>
    </div>
</div>
    
    