<div class="setting" ng-controller="settingController">
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-heading" style="background-color: white">
                <h3 class="panel-title">
                    <i class="fa fa-cog"></i>
                    <%=title%>
                </h3>
            </div>
            <div class="panel-body clearfix">
                <div class="userInfo">

                    <form name="loginForm" novalidate>

                        <div class="form-group">
                            <label for="name">账号：</label>
                            <span>
                                <%=user.name%>
                            </span>
                        </div>
                        <div class="form-group">
                            <label for="name">邮箱：</label>
                            <span>
                                <%=user.email%>
                            </span>
                        </div>
                        <div class="form-group">
                            <label for="password">个人签名：</label>
                            <textarea name="comments" id="comments" class="form-control" cols="30" rows="10" placeholder="请输入个人签名" ng-model="comments"
                                ng-init="comments='<%=user.comments%>'"></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary" ng-click="setting()">保存</button>
                    </form>

                </div>
                <div class="upload pull-right">
                    <!-- 百度上传 -->
                    <div id="uploader-demo">
                        <div id="fileList" class="uploader-list"></div>
                        <div id="filePicker">选择图片</div>
                    </div>

                    <!-- jquery uploadify上传 -->
                    <div id="uploadify">
                        <input id="userId" type="hidden" value="<%=user._id%>">
                        <input id="userName" type="hidden" value="<%=user.name%>">
                        <div id="queue"></div>
                        <input id="file_upload" name="file_upload" type="file" multiple="true">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- 百度上传 -->
<link rel="stylesheet" href="/stylesheets/upload.css">
<script src="/javascripts/upload.js"></script>
<!-- jquery uploadify上传 -->
<script src="/javascripts/jupload.js"></script>